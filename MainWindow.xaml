<Window x:Class="pz14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pz14"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="hostelName" 
          FontSize="20" TextAlignment="Center" 
                 Width="300" Height="50" Margin="0,0,0,20"/>

            <Button Content="Начать бронировнаие" 
                    Click="Button_Click" Margin="0,0,0,20" />
            <Button Content="Остановить бронировнаие" 
                    Click="Button_Click_1" />
        </StackPanel>
        
    </Grid>
</Window>
